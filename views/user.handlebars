<div id="user-page">
    <a class="link-back" href="/users">Voltar</a>
    <div class="container">
        <h1>{{usuario.name}}</h1>
        <p>{{usuario.name}} residente no logradouro: {{usuario.adress}}</p>
        <div class="actions">
            <a class="link-edit" href="/users/edit/{{usuario.id}}">Editar</a>
            <form action="/users/remove/{{usuario.id}}" method="post">
                <input type="submit" value="Remover">
            </form>
        </div>
    </div>
</div>